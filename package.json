  "pa11y": {
    "chromeLaunchConfig": {
      "args": ["--no-sandbox", "--disable-setuid-sandbox", "--disable-dev-shm-usage"]
    }
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "html-validator-cli": "^7.0.0",
    "pa11y": "^6.2.3",
    "serve": "^14.2.1",
    "wait-on": "^8.0.1"
    }
}
